package ProgramingFundamentals_JAVA_2022.Exercise.Ex_02_Data_Types_and_Variables;

import java.util.Scanner;

public class Ex01_Integer_Operations {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int firstNum = Integer.parseInt(scanner.nextLine());
        int secondNum = Integer.parseInt(scanner.nextLine());
        int thirdNum = Integer.parseInt(scanner.nextLine());
        int fourthNum = Integer.parseInt(scanner.nextLine());

        int result = ((firstNum + secondNum) / thirdNum) * fourthNum;

        System.out.println(result);


    }
}
